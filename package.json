{
    "name": "reflective-dependency-injection",
    "version": "0.5.0",
    "description": "Dependency injection based on TypeScript's experimental support for stage 2 decorators and metadata.",
    "keywords": [
        "container",
        "dependency-injection",
        "di",
        "injector",
        "inversion-of-control",
        "ioc"
    ],
    "files": [
        "./dist"
    ],
    "type": "module",
    "exports": "./dist/index.js",
    "engines": {
        "node": ">=20"
    },
    "scripts": {
        "lint": "eslint .",
        "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
        "test:watch": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch",
        "prebuild": "npm run clean",
        "build": "tsc -p ./tsconfig.build.json",
        "clean": "rimraf --glob ./dist ./*.tgz ./coverage",
        "version": "conventional-changelog -p angular -i ./CHANGELOG.md -s && git add ./CHANGELOG.md",
        "prepack": "npm run build"
    },
    "author": "choi-jack <choi.jaehyeok@outlook.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/choi-jack/reflective-dependency-injection.git"
    },
    "dependencies": {
        "class-metadata": "^0.3.0"
    },
    "devDependencies": {
        "@choi-jack/eslint-config": "^0.2.2",
        "@eslint/js": "^9.9.1",
        "@jest/globals": "^29.7.0",
        "@stylistic/eslint-plugin": "^2.7.2",
        "@tsconfig/node20": "^20.1.4",
        "@types/eslint__js": "^8.42.3",
        "@types/node": "^20.16.3",
        "conventional-changelog-cli": "^5.0.0",
        "eslint": "^9.9.1",
        "jest": "^29.7.0",
        "rimraf": "^6.0.1",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.5.4",
        "typescript-eslint": "^8.3.0"
    }
}
