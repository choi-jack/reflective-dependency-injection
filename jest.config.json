{
    "extensionsToTreatAsEsm": [
        ".ts"
    ],
    "moduleNameMapper": {
        "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
        "^.+\\.tsx?$": [
            "ts-jest",
            {
                "useESM": true,
                "tsconfig": "./tsconfig.test.json"
            }
        ]
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
        "./src/**"
    ],
    "verbose": true
}
